@model IEnumerable<MVCDemoApp.Models.Employee>  
     
@{  
        ViewData["Title"] = "Index";  
    }  
<h2>Auther details</h2>

<p>  
    <a asp-action="Create"> New Auther</a>  
</p>

@*Create Employee Alert Notification *@
@if (TempData["CreateMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Success!</strong> @TempData["CreateMessage"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

@*Update Employee Alert Notification *@
@if (TempData["UpdateMessage"] != null)
{
    <div class="alert alert-info">
        <strong>Success!</strong> @TempData["UpdateMessage"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

@*Delete Employee Alert Notification *@
@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Success!</strong> @TempData["DeleteMessage"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}



<table class="table">  
    <thead>  
        <tr>  
            <th>  
                @Html.DisplayNameFor(model => model.Name)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.Gender)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.Department)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.City)  
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th></th>  
        </tr>  
    </thead>  
    <tbody>  
        @foreach (var item in Model)  
{  
            <tr>  
                <td>  
                    @Html.DisplayFor(modelItem => item.Name)  
                </td>  
                <td>  
                    @Html.DisplayFor(modelItem => item.Gender)  
                </td>  
                <td>  
                    @Html.DisplayFor(modelItem => item.Department)  
                </td>  
                <td>  
                    @Html.DisplayFor(modelItem => item.City)  
                </td>
                <td>  
                    @Html.DisplayFor(modelItem => item.email)  
                </td>
                <td>  
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a>   
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.ID">Details</a>   
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>  
                </td>  
            </tr>  
        }  
    </tbody>  
</table>